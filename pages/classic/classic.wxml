
<view class="container">
    <view class="head">
      <v-epsoide  class='epsoide' index="{{classic.index}}"></v-epsoide>
      <v-like  class='like' bind:like="onLike" like="{{classic.like_status==1?true:false}}" count="{{classic.fav_nums}}"/>
    </view>
    <v-movie img="{{classic.image}}" content="{{classic.content}}"/>
    <v-navi class='navi' bind:left="onNext" bind:right="onPrevious"  first="{{first}}" latest="{{latest}}" title="{{classic.title}}"/>
</view>